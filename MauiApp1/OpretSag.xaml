<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.OpretSag">
    <ContentPage.Content>
        <HorizontalStackLayout Spacing ="20" HorizontalOptions="Center">
            <VerticalStackLayout Spacing="5">
                <HorizontalStackLayout>
                    <Label Text="Overskrift" FontAttributes="Bold"/>
                    <Entry x:Name="Overskrift" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Beskrivelse" FontAttributes="Bold"/>
                    <Entry x:Name="Beskrivelse" />
                </HorizontalStackLayout>
                <Button Text ="Opret sag" Clicked="AddSag"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </ContentPage.Content>
</ContentPage>